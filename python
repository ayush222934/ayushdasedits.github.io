# Sample CSS content
style_css = """
/* Basic Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Body and Background */
body {
  font-family: 'Segoe UI', sans-serif;
  color: white;
  background: radial-gradient(circle at top, #0f1e35, #060b16);
  scroll-behavior: smooth;
  max-width: 1400px;
  margin: 0 auto;
}

/* Header */
header {
  text-align: center;
  padding: 50px 20px;
}
