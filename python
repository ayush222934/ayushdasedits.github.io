# Sample JS content
script_js = """
document.addEventListener("DOMContentLoaded", () => {
  console.log("Portfolio website loaded.");
});
"""

# Create subdirectories for CSS, JS, and assets
os.makedirs(os.path.join(project_path, "css"), exist_ok=True)
os.makedirs(os.path.join(project_path, "js"), exist_ok=True)
os.makedirs(os.path.join(project_path, "assets/videos"), exist_ok=True)
os.makedirs(os.path.join(project_path, "assets/thumbnails"), exist_ok=True)
os.makedirs(os.path.join(project_path, "assets/icons"), exist_ok=True)
os.makedirs(os.path.join(project_path, "assets/images"), exist_ok=True)
os.makedirs(os.path.join(project_path, "assets/tools"), exist_ok=True)

# Write files
with open(os.path.join(project_path, "index.html"), "w") as f:
    f.write(index_html)

with open(os.path.join(project_path, "css", "style.css"), "w") as f:
    f.write(style_css)

with open(os.path.join(project_path, "js", "script.js"), "w") as f:
    f.write(script_js)

# Create dummy asset files (if not replaced by actual assets, you can replace these later)
dummy_assets = {
    "assets/videos/showcase.mp4": "dummy video content",
    "assets/videos/client1.mp4": "dummy video content",
    "assets/videos/client2.mp4": "dummy video content",
    "assets/videos/client3.mp4": "dummy video content",
    "assets/videos/client4.mp4": "dummy video content",
    "assets/thumbnails/showcase.jpg": "dummy image content",
    "assets/thumbnails/client1.jpg": "dummy image content",
    "assets/thumbnails/client2.jpg": "dummy image content",
    "assets/thumbnails/client3.jpg": "dummy image content",
    "assets/thumbnails/client4.jpg": "dummy image content",
    "assets/icons/instagram.png": "dummy icon content",
    "assets/icons/twitter.png": "dummy icon content",
    "assets/icons/gmail.png": "dummy icon content",
    "assets/icons/discord.png": "dummy icon content",
    "assets/icons/tiktok.png": "dummy icon content",
    "assets/images/manip1.jpg": "dummy image content",
    "assets/images/manip2.jpg": "dummy image content",
    "assets/images/manip3.jpg": "dummy image content",
    "assets/images/manip4.jpg": "dummy image content",
    "assets/tools/aftereffects.png": "dummy tool icon",
    "assets/tools/photoshop.png": "dummy tool icon",
    "assets/tools/blender.png": "dummy tool icon",
    "assets/tools/maya.png": "dummy tool icon",
    "assets/tools/premiere.png": "dummy tool icon",
}

for filepath, content in dummy_assets.items():
    full_path = os.path.join(project_path, filepath)
    with open(full_path, "w") as f:
        f.write(content)

# Now create the revised zip file
final_zip_path = "/mnt/data/final_portfolio_revised.zip"
with zipfile.ZipFile(final_zip_path, "w", zipfile.ZIP_DEFLATED) as zipf:
    for root, dirs, files in os.walk(project_path):
        for file in files:
            file_path = os.path.join(root, file)
            arcname = os.path.relpath(file_path, project_path)
            zipf.write(file_path, arcname)
